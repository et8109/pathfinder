<LoginScreen>:
    BoxLayout:
        Label:
            id: message
            text: '...'
        TextInput: 
            id: username
            text: 'realusername'
        TextInput:
            id: password
            text: 'password'
        Button:
            text: 'Login'
            on_press: root.login(username.text, password.text);

<MainScreen>:
    BoxLayout:
        Button:
            text: 'logout'
            on_press: root.disconnect(); root.manager.current = 'Login';
        Label:
            id: message
            text: '...'
